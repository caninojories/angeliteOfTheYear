.main {
  background-color: #ecf0f1;
  .submit{
    position: fixed;
    left: 0;
    top: 40%;
    z-index: 100;
    button {
      border-radius: 0;
    }
  }
  .submit.ng-hide-add.ng-hide-add-active,
  .submit.ng-hide-remove.ng-hide-remove-active {
    -webkit-transition: all linear .5s;
    transition: all linear .5s;
  }

  @media screen and (min-width: 1024px) {
    .submit.ng-hide {
      position: fixed
      top: 40%;
      left: 1024px;
      opacity: 0.5;
    }
  }

  .row-centered {
    text-align:center;
  }
  .col-centered {
    display:inline-block;
    float:none;
    /* reset the text-align */
    text-align:left;
    /* inline-block space fix */
    margin-right:0;
  }
  .frame {
    background-color: #e67e22;
    h5, p {
      color: #fff;
    }
  }
  .nonTeaching {
    background-color: #e74c3c;
    h5, p {
      color: #fff;
    }
  }
  .student {
    background-color: #d35400;
    h5, p {
      color: #fff;
    }
  }
  .org {
    background-color: #c0392b;
    h5, p {
      color: #fff;
    }
  }
  .teachingCategory {
    color: #e67e22;
    .label-default {
      background-color: #e67e22;
    }
  }
  .nonTeachingCategory {
    color: #e74c3c;
    .label-default {
      background-color: #e74c3c;
    }
  }
  .studentCategory {
    color: #d35400;
    .label-default {
      background-color: #d35400;
    }
  }
  .orgCategory {
    color: #c0392b;
    .label-default {
      background-color: #c0392b;
    }
  }
}
